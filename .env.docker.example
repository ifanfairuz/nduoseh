# ============================================
# Nduoseh Docker Environment Configuration
# ============================================
# Copy this file to .env.docker for Docker Compose
# ============================================

# ============================================
# General
# ============================================
TZ=UTC
COMPOSE_PROJECT_NAME=nduoseh

# ============================================
# Database (PostgreSQL)
# ============================================
DATABASE_NAME=nduoseh
DATABASE_USER=postgres
DATABASE_PASSWORD=your-secure-postgres-password
DATABASE_PORT=5432

# ============================================
# Redis
# ============================================
REDIS_PASSWORD=your-secure-redis-password
REDIS_PORT=6379

# ============================================
# Server (NestJS)
# ============================================
SERVER_PORT=3000
NODE_ENV=production

# JWT Configuration
PRIVATE_KEY_PASSPHRASE=your-private-key-passphrase

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,https://yourdomain.com

# Swagger Configuration
SWAGGER_DISABLE=false
SWAGGER_URL=doc

# ============================================
# Web (Vue 3) - Optional
# ============================================
WEB_PORT=5173
VITE_API_URL=http://localhost:3000/api
